<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D336B"
    tools:context=".userProfile">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#2D336B"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="82dp"
            android:layout_height="73dp"
            android:contentDescription="Logo"
            android:src="@drawable/logo1" />

        <TextView
            android:id="@+id/myProfile"
            android:layout_width="224dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="center"
            android:text="my profile"
            android:textColor="#FDFCFC"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="61dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/usericon" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Arrow Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            app:tint="#FAF9F9"
            android:src="?attr/homeAsUpIndicator"/>

        <!-- Spacer to push Log Out to the right -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Log Out Button -->
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="160dp"
        android:layout_height="101dp"
        app:srcCompat="@android:drawable/ic_menu_help"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="169dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="106dp"
        android:layout_height="46dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Help"
        android:textAlignment="center"
        android:textColor="#A9B5DF"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="285dp" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip"
        android:layout_width="315dp"
        android:layout_height="96dp"
        android:background="#7886C7"
        android:backgroundTint="#7886C7"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="407dp" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip2"
        android:layout_width="319dp"
        android:layout_height="88dp"
        android:backgroundTint="#7886C7"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="557dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="Help Using the App?"
        android:textColor="#FFF2F2"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="441dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="Frequently Asked Questions?"
        android:textColor="#FFF2F2"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="589dp" />


</androidx.constraintlayout.widget.ConstraintLayout>

