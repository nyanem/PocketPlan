<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D336B"
    tools:context=".Language">

    <!-- Top Bar -->

    <!-- Language Icon & Text -->

    <!-- Menu Section -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="#2D336B"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">        <ImageView
            android:id="@+id/logo"
            android:layout_width="67dp"
            android:layout_height="71dp"
            android:contentDescription="@string/logo_description"
            android:src="@drawable/logo1" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />        <ImageView
            android:id="@+id/icon"
            android:layout_width="60dp"
            android:layout_height="64dp"
            android:contentDescription="@string/user_icon_description"
            android:src="@drawable/usericon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/languageSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar">        <ImageView
            android:id="@+id/imageView"
            android:layout_width="156dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:contentDescription="@string/language_icon_description"
            android:src="@drawable/language" />
        <TextView
            android:id="@+id/language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/language_currency"
            android:textColor="#A9B5DF"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menuSection"
        android:layout_width="407dp"
        android:layout_height="182dp"
        android:layout_marginTop="88dp"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/languageSection">
        <!-- Language Selection -->
        <Spinner
            android:id="@+id/languageSpinner"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/menu_item_bg"
            android:fontFamily="@font/montserrat"
            android:padding="16dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- Currency Section -->
        <Spinner
            android:id="@+id/currencySpinner"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/menu_item_bg"
            android:fontFamily="@font/montserrat"
            android:padding="16dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Back Arrow Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="?attr/homeAsUpIndicator"
            app:tint="#FAF9F9" />

        <!-- Spacer to push Log Out to the right -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />        <!-- Log Out Button -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:backgroundTint="#A9B5DF"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="@string/log_out"
            android:textColor="#000000" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
