<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D336B"
    tools:context=".Language">

    <!-- Top Bar -->

    <!-- Language Icon & Text -->

    <!-- Menu Section -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="#2D336B"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="67dp"
            android:layout_height="71dp"
            android:contentDescription="Logo"
            android:src="@drawable/logo1" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="60dp"
            android:layout_height="64dp"
            android:contentDescription="User Icon"
            android:src="@drawable/usericon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/languageSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="156dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:contentDescription="Language Icon"
            android:src="@drawable/language" />

        <TextView
            android:id="@+id/language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat"
            android:text="Language / Currency"
            android:textColor="#A9B5DF"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menuSection"
        android:layout_width="427dp"
        android:layout_height="171dp"
        android:layout_marginTop="96dp"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/languageSection">

        <!-- Menu Item 1 -->

        <!-- Menu Item 2 -->
        <TextView
            android:id="@+id/menuLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_item_bg"
            android:fontFamily="@font/montserrat"
            android:padding="16dp"
            android:text="Change the Language?"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/menuCurrency"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/menu_item_bg"
            android:fontFamily="@font/montserrat"
            android:padding="16dp"
            android:text="Change the currency? "
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Arrow Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            app:tint="#FAF9F9"
            android:src="?attr/homeAsUpIndicator"/>

        <!-- Spacer to push Log Out to the right -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Log Out Button -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#A9B5DF"
            android:text="Log Out"
            android:textColor="#000000"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:background="@drawable/round_button" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
