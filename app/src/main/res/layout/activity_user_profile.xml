<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D336B"
    tools:context=".userProfile">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#2D336B"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="82dp"
            android:layout_height="73dp"
            android:contentDescription="Logo"
            android:src="@drawable/logo1" />

        <TextView
            android:id="@+id/myProfile"
            android:layout_width="224dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="center"
            android:text="my profile"
            android:textColor="#FDFCFC"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/editprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_subrayada"
            android:gravity="center"
            android:text="Edit Profile"
            android:textColor="#A9B5DF"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/userInfoSection"
        android:layout_width="393dp"
        android:layout_height="233dp"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <ImageView
            android:id="@+id/usericon"
            android:layout_width="194dp"
            android:layout_height="89dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="center"
            android:text="Your Name"
            android:textColor="#FDFDFD"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/budgetacc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="Personal Budget Account"
            android:textColor="#FBFBFB"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="#7886C7" />

    </LinearLayout>
    <!-- Menu Section -->
    <LinearLayout
        android:id="@+id/menuSection"
        android:layout_width="411dp"
        android:layout_height="294dp"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userInfoSection">

        <!-- Menu Item 1: Banking Account -->
        <TextView
            android:id="@+id/menuBanking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_item_bg"
            android:fontFamily="@font/montserrat"
            android:padding="16dp"
            android:text="Banking Account"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- Menu Item 2: Help -->
        <TextView
            android:id="@+id/menuHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/menu_item_bg"
            android:fontFamily="@font/montserrat"
            android:padding="16dp"
            android:text="FAQ"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Menu Item 3: Budgeting Tips -->
        <TextView
            android:id="@+id/menuTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/menu_item_bg"
            android:fontFamily="@font/montserrat"
            android:padding="16dp"
            android:text="Budgeting Tips"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Menu Item 4: Language / Currency -->
        <TextView
            android:id="@+id/menuLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/menu_item_bg"
            android:fontFamily="@font/montserrat"
            android:padding="16dp"
            android:text="Language / Currency"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- Bottom Buttons Section -->
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Arrow Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            app:tint="#FAF9F9"
            android:src="?attr/homeAsUpIndicator"/>

        <!-- Spacer to push Log Out to the right -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Log Out Button -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#A9B5DF"
            android:text="Log Out"
            android:textColor="#000000"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:background="@drawable/round_button" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

